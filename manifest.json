{
  "name": "GeForce NOW Enabler",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Use GeForce NOW inside the chrome browser on any operating system.",
  "homepage_url": "https://github.com/murar8/gfn-enabler",
  "author": "Lorenzo Murarotto <lnzmrr@gmail.com>",
  "minimum_chrome_version": "35",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://play.geforcenow.com/*"
  ]
}
