{
  "name": "GeForce NOW Enabler",
  "version": "0.2.1",
  "manifest_version": 2,
  "description": "Use GeForce NOW inside your browser on any operating system.",
  "homepage_url": "https://github.com/murar8/gfn-enabler",
  "author": "Lorenzo Murarotto <lnzmrr@gmail.com>",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "permissions": ["webRequest", "webRequestBlocking", "https://play.geforcenow.com/*"]
}
